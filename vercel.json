{
  "versión": 2,
  "construye": [
    {
      "src": "api/index.js",
      "uso": "@vercel/nodo"
    },
    {
      "src": "cliente/paquete.json",
      "uso": "@vercel/static-build",
      "config": {
        "distDir": "construir"
      }
    }
  ],
  "rutas": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "^/estático/(.*)",
      "dest": "/cliente/estático/$1"
    },
    {
       "src": "/(.*)\\.png",
       "dest": "/cliente/$1.png"
     },
    {
      "src": "/(.*)",
      "dest": "/cliente/index.html"
    }
  ]
}
